<?xml version="1.0" encoding="UTF-8"?>

<!-- For assistance related to logback-translator or configuration -->
<!-- files in general, please contact the logback user mailing list -->
<!-- at http://www.qos.ch/mailman/listinfo/logback-user -->
<!-- -->
<!-- For professional support please see -->
<!-- http://www.qos.ch/shop/products/professionalSupport -->
<!-- -->
<configuration scan="true" scanPeriod="300 seconds" debug="ture">
	<property name="APP_NAME" value="mljr" />
	<property name="LOG_HOME" value="/var/log/mljr" />
	<!-- email start -->
	<property name="smtpHost" value="smtp.exmail.qq.com" />
    <property name="username" value="datahub-monitor@liyunqiche.com" /> 
    <property name="password" value="Password1" />
    <property name="email_to" value="bee@mljr.com" />
    <property name="SSL" value="false" />
    <property name="email_subject" value="mljr-spider-warning" />
    <!-- email end -->
	<contextName>${APP_NAME}</contextName>
	
	<!-- 加入email参数 -->
	<appender name="EMAIL" class="ch.qos.logback.classic.net.SMTPAppender">
		<smtpHost>${smtpHost}</smtpHost>
		<smtpPort>25</smtpPort>
		<Username>${username}</Username>
		<Password>${password}</Password>
		<SSL>${SSL}</SSL>
		<to>${email_to}</to>
		<from>${username}</from>
		<subject>${email_subject}</subject>
		<asynchronousSending>false</asynchronousSending>
		<layout class="ch.qos.logback.classic.html.HTMLLayout">
			<pattern>%d{yyyy-MM-dd/HH:mm:ss.SSS}%X{ip}%level%thread%logger{20}%line%msg%n</pattern>
		</layout>
	</appender>
	
	<appender name="STDOUT"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<!--See also http://logback.qos.ch/manual/appenders.html#RollingFileAppender -->
		<encoder>
			<pattern>%d{yyyy-MM-dd/HH:mm:ss.SSS} %level [%thread]
				%logger{20}:%line - %msg%n</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>DEBUG</level>
		</filter>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- rollover daily -->
			<fileNamePattern>${LOG_HOME}/spider-debug-%d{yyyy-MM-dd}.%i.log
			</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy
				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<!-- or whenever the file size reaches 100MB -->
				<maxFileSize>100MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
			<maxHistory>30</maxHistory>
		</rollingPolicy>
	</appender>

	<appender name="A1"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<!--See also http://logback.qos.ch/manual/appenders.html#RollingFileAppender -->
		<encoder>
			<pattern>%d{yyyy-MM-dd/HH:mm:ss.SSS} %level [%thread]
				%logger{20}:%line - %msg%n</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>INFO</level>
		</filter>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- rollover daily -->
			<fileNamePattern>${LOG_HOME}/spider-%d{yyyy-MM-dd}.%i.log
			</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy
				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<!-- or whenever the file size reaches 100MB -->
				<maxFileSize>100MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
			<maxHistory>30</maxHistory>
		</rollingPolicy>
	</appender>

	<logger name="com.alibaba.druid.filter.stat.StatFilter" level="INFO" />
	<logger name="com.alibaba.druid.pool.DruidDataSource" level="INFO" />
	<logger name="com.alibaba.druid" level="INFO" />
	<logger name="druid.sql" level="WARN" />
	<logger name="druid.sql.DataSource" level="WARN" />
	<logger name="druid.sql.Connection" level="WARN" />
	<logger name="druid.sql.Statement" level="WARN" />
	<logger name="org.springframework.security" level="WARN" />
	<logger name="org.springframework" level="WARN" />
	<logger name="com.ibatis" level="INFO" />
	<logger name="java.sql" level="INFO" />
	<logger name="org.apache.ibatis" level="INFO" />
	<logger name="org.mybatis.spring" level="INFO" />
	<logger name="java.sql.ResultSet" level="INFO" />
	<logger name="java.sql.Connection" level="INFO" />
	<logger name="java.sql.Statement" level="INFO" />
	<logger name="java.sql.PreparedStatement" level="INFO" />
	<logger name="com.ucloud.umq" level="DEBUG" />
	<logger name="org.apache.http" level="DEBUG" />
	<logger name="org.I0Itec.zkclient" level="DEBUG" />
	<logger name="us.codecraft.webmagic" level="DEBUG" />
	<logger name="com.mljr.spider" level="DEBUG" />
	<logger name="warn-email" level="INFO" additivity="false">
		<appender-ref ref="EMAIL" />
	</logger>
	
	<root level="DEBUG">
		<appender-ref ref="A1" />
		<appender-ref ref="STDOUT" />
	</root>

</configuration>