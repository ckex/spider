<configuration scan="true" scanPeriod="300 seconds" debug="ture">
	<property name="APP_NAME" value="mljr" />
	<property name="LOG_HOME" value="/data/var/log/mljr" />
	<property name="SAIGE_DATA_HOME" value="/data/saige" />
	<property name="JUHE_DATA_HOME" value="/data/juhe" />
	<property name="DOWNLOADER_LISTENER_HOME" value="/data/listener" />
	<contextName>${APP_NAME}</contextName>

	<appender name="STDOUT"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<!--See also http://logback.qos.ch/manual/appenders.html#RollingFileAppender -->
		<encoder charset="UTF-8"> <!-- encoder 可以指定字符集，对于中文输出有意义 -->
			<pattern>%d{yyyy-MM-dd/HH:mm:ss.SSS} %level [%thread] %logger{20}:%line - %msg%n</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>DEBUG</level>
		</filter>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- rollover daily -->
			<fileNamePattern>${LOG_HOME}/spider-debug-%d{yyyy-MM-dd}.%i.log
			</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy
				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<!-- or whenever the file size reaches 100MB -->
				<maxFileSize>100MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
			<maxHistory>300</maxHistory>
		</rollingPolicy>
	</appender>

